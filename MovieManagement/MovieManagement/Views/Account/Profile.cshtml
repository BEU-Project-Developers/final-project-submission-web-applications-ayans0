@model MovieManagement.Models.ApplicationUser
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            @if (TempData["StatusMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["StatusMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">My Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Username:</div>
                        <div class="col-md-8">@Model.UserName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Email:</div>
                        <div class="col-md-8">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Name:</div>
                        <div class="col-md-8">@Model.FirstName @Model.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Member Since:</div>
                        <div class="col-md-8">@Model.RegistrationDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Account" asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
                    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-secondary">Change Password</a>
                    <a asp-controller="Account" asp-action="UserInfo" class="btn btn-info">User Info</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div> 