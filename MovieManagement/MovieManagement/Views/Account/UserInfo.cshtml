@{
    ViewData["Title"] = "User Information";
    var roles = ViewData["Roles"]?.ToString() ?? "";
}

<div class="container mt-4">
    <h2>User Information</h2>
    <div class="card">
        <div class="card-body">
            <p><strong>User ID:</strong> @ViewData["UserId"]</p>
            <p><strong>Username:</strong> @ViewData["UserName"]</p>
            <p><strong>Email:</strong> @ViewData["Email"]</p>
            <p><strong>Roles:</strong> @roles</p>
        </div>
    </div>
    <div class="mt-3">
        <a asp-controller="Account" asp-action="Profile" class="btn btn-primary">Back to Profile</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
    </div>
</div> 