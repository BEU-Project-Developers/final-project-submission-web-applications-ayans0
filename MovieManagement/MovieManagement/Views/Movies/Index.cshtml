@model IEnumerable<MovieManagement.Models.Movie>
@{
    ViewData["Title"] = "Movies";
}

<style>
    .movie-poster {
        width: 100%;
        height: 400px;
        object-fit: contain;
        object-position: center;
        background-color: #f8f9fa;
    }

    .movie-card {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .movie-card .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
</style>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Movies</h2>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search movies...">
                <button class="btn btn-primary" type="button">Search</button>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4 d-flex">
                <div class="card movie-card w-100">
                    <img src="@movie.PosterUrl" class="card-img-top movie-poster" alt="@movie.Title">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">
                            <small class="text-muted">Director: @movie.Director</small><br>
                            <small class="text-muted">Rating: @movie.Rating/10</small>
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View Details</a>
                            <button class="btn btn-outline-primary add-to-watchlist" data-movie-id="@movie.Id">
                                <i class="fas fa-plus"></i> Watchlist
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
