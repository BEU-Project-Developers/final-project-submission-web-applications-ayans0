@model MovieManagement.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Delete Movie</h2>
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>Are you sure you want to delete this movie? This action cannot be undone.</p>
                    </div>
                    <div class="mb-4">
                        <h5>Movie Details:</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.Title</dd>

                            <dt class="col-sm-3">Director</dt>
                            <dd class="col-sm-9">@Model.Director</dd>
                        </dl>
                    </div>
                    <form asp-controller="Admin" asp-action="DeleteMovie" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="id" name="id" value="@Model.Id">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete Movie</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 