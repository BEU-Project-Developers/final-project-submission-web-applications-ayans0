@model MovieManagement.Models.MovieViewModel
@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Edit Movie</h2>
                    <form asp-action="EditMovie" asp-controller="Admin" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" required>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Director" class="form-label"></label>
                            <input asp-for="Director" class="form-control" required>
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReleaseDate" class="form-label"></label>
                                <input asp-for="ReleaseDate" class="form-control" type="date">
                                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Duration" class="form-label"></label>
                                <input asp-for="Duration" class="form-control" type="number">
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PosterFile" class="form-label"></label>
                            <input asp-for="PosterFile" class="form-control" type="file" accept="image/*">
                            <span asp-validation-for="PosterFile" class="text-danger"></span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.PosterUrl))
                        {
                            <div class="mb-3">
                                <label asp-for="PosterUrl" class="form-label">Current Poster</label>
                                <img src="@Model.PosterUrl" alt="Current Poster" class="img-thumbnail" style="max-height: 200px">
                                <input asp-for="PosterUrl" type="hidden">
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="TrailerUrl" class="form-label"></label>
                            <input asp-for="TrailerUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=...">
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Enter a YouTube, Vimeo, or other video streaming URL</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label"></label>
                            <input asp-for="Rating" class="form-control" type="number" min="0" max="10" step="0.1">
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SelectedCategoryIds" class="form-label">Categories</label>
                            @if (Model.AvailableCategories != null)
                            {
                                @foreach (var category in Model.AvailableCategories)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="SelectedCategoryIds"
                                               value="@category.Id" id="category_@category.Id"
                                        @(Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "")>
                                        <label class="form-check-label" for="category_@category.Id">@category.Name</label>
                                    </div>
                                }
                            }
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 