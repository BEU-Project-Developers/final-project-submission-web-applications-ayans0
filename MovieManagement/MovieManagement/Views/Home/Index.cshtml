@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true">

</head>

<body>
<style>
    .hero {
       
        background-color: #212529;
        color: white;
        padding: 50px;
        text-align: center;
    }

    .card-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        width: 300px;
        text-align: center;
    }

    .movie-card img {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }
</style>

<div class="text-center">
    <h1 class="display-4 mb-4">Welcome to Movie Management</h1>
    <p class="lead">Your ultimate destination for movie information and reviews.</p>
</div>

<div class="d-flex justify-content-center align-items-stretch gap-4 flex-wrap mt-5 mb-4">
    <div class="card h-100" style="width: 320px; min-width: 260px;">
        <div class="card-body text-center">
            <h5 class="card-title">Browse Movies</h5>
            <p class="card-text">Explore our extensive collection of movies, from classics to the latest releases.</p>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">View Movies</a>
        </div>
    </div>
    <div class="card h-100" style="width: 320px; min-width: 260px;">
        <div class="card-body text-center">
            <h5 class="card-title">Join Our Community</h5>
            <p class="card-text">Create an account to rate movies and write reviews.</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register Now</a>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h2 class="text-center mb-4">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-3 text-center">
                <i class="fas fa-film fa-3x mb-3"></i>
                <h4>Extensive Collection</h4>
                <p>Thousands of movies at your fingertips</p>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-star fa-3x mb-3"></i>
                <h4>User Reviews</h4>
                <p>Real opinions from real movie lovers</p>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h4>Community</h4>
                <p>Connect with fellow movie enthusiasts</p>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-clock fa-3x mb-3"></i>
                <h4>Always Updated</h4>
                <p>Latest releases and news</p>
            </div>
        </div>
    </div>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

</body>
