@{
    ViewData["Title"] = "Movies";
}


<style>
    .hero {
        background-color: #212529;
        color: white;
        padding: 50px;
        text-align: center;
    }

    .card-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        width: 300px;
        text-align: center;
    }

    .movie-card img {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }
</style>

<h2 class="mt-5">Movies</h2>
<div class="container mt-4">
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="searchInput" placeholder="Search movies..." aria-label="Search movies">
        <button class="btn btn-primary" type="button">Search</button>
    </div>
</div>

